<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_below="@+id/toolbar"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/also_known_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_iv"
        android:padding="12dp"
        android:text="@string/detail_also_known_as_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_iv"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/also_known_as"
        android:padding="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ingredients_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_of_origin"
        android:padding="12dp"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_origin_tv"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ingredients_label"
        android:padding="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/place_of_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/also_known_as"
        android:padding="12dp"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/place_origin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/also_known_tv"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/place_of_origin"
        android:padding="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredients_label"
        android:layout_marginTop="0dp"
        android:padding="12dp"
        android:text="@string/detail_description_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients_tv"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/description_label"
        android:padding="5dp"
        android:textSize="12sp" />

</RelativeLayout>


